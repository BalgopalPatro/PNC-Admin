<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/receiver_message_text_cont"
        android:background="@drawable/their_message"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/receiver_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="receiver message"
            android:textColor="#474747"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/receiver_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="time"
            android:layout_gravity="end"
            android:textColor="#B0B0B0"
            android:textSize="10dp"
            android:textAlignment="viewEnd"
            android:textStyle="bold" />
    </LinearLayout>


    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/their_message"
        android:padding="17dp"
        android:layout_margin="5dp"
        android:elevation="5dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/their_message"
        android:padding="17dp"
        android:elevation="5dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_alignParentTop="@+id/receiver_message_text_cont"
        android:layout_alignParentEnd="true"
        android:id="@+id/sender_message_text_cont"
        android:background="@drawable/my_message"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sender_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="sender message"
            android:textColor="#fff"
            android:textSize="13dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sender_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="time"
            android:layout_gravity="end"
            android:textColor="#DDDDDD"
            android:textSize="10dp"
            android:textAlignment="viewEnd"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>