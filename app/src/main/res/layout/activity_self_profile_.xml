<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Self_Profile_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Name: "
                    android:textSize="19dp" />

                <EditText
                    android:id="@+id/fullname"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:hint="Fullname"
                    android:maxLines="1"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Phone: "
                    android:textSize="19dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/email_lock">

                    <EditText
                        android:id="@+id/phone_ui"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:singleLine="true"
                        android:hint="phone number"
                        android:maxLines="1"
                        android:textColor="#08326C" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/designation_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/email_lock"
                android:paddingBottom="9dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Designation: "
                    android:textSize="19dp" />

                <EditText
                    android:id="@+id/designation_edittext"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:hint="to be assigned by admin"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#08326C" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/membership_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/email_lock"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:paddingBottom="9dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Membersip: "
                    android:textSize="19dp" />

                <EditText
                    android:id="@+id/membership_edittext"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:textColor="#08326C"
                    android:hint="to be assigned by admin"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/update_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/info"
            android:layout_margin="15dp"
            android:alpha="0.95"
            android:background="@drawable/button_bg_oval"
            android:padding="15dp"
            android:text="update"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>